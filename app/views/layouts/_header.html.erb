<header style="height:95px;position:relative">
    <a href="/"><div class="logo" style="background:url(/images/new_logo.png) no-repeat left top;height:48px;width:260px;position:absolute;top:20px">&nbsp;</div></a>
<nav class="header">
  <div class="topright">
    <ul class="inline">
      <li><%= link_to "HOME", root_path %></li>
      <% if signed_in? %>
      <li><%= link_to "USERS", users_path %></li>
      <li><%= link_to "PROFILE", current_user %></li>
      <li><%= link_to "SETTINGS", edit_user_path(current_user) %></li>
      <% end %>
      <li><%= link_to "ABOUT", about_path %></li>
      <% if signed_in? %>
      <li><%= link_to "SIGN OUT", signout_path, :method => :delete %></li>
      <% else %>
      <li><%= link_to "SIGN IN", signin_path %></li>
      <% end %>
    </ul>
  </div>
</nav>
</header>
